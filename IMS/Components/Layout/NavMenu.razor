@using Microsoft.Extensions.Localization
@inject IStringLocalizer<IMS.Components.Layout.NavMenu> L


<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">IMS</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="nav flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> @L["Home"]
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="stock">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> @L["Stock"]
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="purchase">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> @L["Purchase"]
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="Suppliers">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> @L["Suppliers"]
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="supplier-orders">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> @L["SupplierOrders"]
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="Logs">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> @L["Logs"]
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="Sellers">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> @L["Sellers"]
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="Language">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> @L["Language"]
            </NavLink>
        </div>
    </nav>
</div>

