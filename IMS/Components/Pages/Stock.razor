@page "/stock"
@using IMS.Helpers
@using IMS_Shared.Dtos
@using System.ComponentModel.DataAnnotations
@inject InventoryApiClient ApiClient
@rendermode InteractiveServer
@attribute [StreamRendering]

<h3>Stock Management</h3>

@if (isLoading)
{
    <p>Loading...</p>
}
else
{
    <div class="card p-3 mb-4">
        <h5>@(editMode ? "Edit Stock" : "Add New Stock")</h5>
        <EditForm Model="stockModel" OnValidSubmit="HandleValidSubmit" FormName="StockForm">
            <DataAnnotationsValidator />
            <ValidationSummary />

            <div class="mb-3">
                <label>Name:</label>
                <InputText class="form-control" @bind-Value="stockModel.Name" />
            </div>

            <div class="mb-3">
                <label>Serial Number:</label>
                <InputText class="form-control" @bind-Value="stockModel.SerialNumber" />
            </div>

            <div class="mb-3">
                <label>Buy Price:</label>
                <InputNumber class="form-control" @bind-Value="stockModel.BuyPrice" />
            </div>

            <div class="mb-3">
                <label>Sell Price:</label>
                <InputNumber class="form-control" @bind-Value="stockModel.SellPrice" />
            </div>

            <div class="mb-3">
                <label>Supplier:</label>
                <InputSelect @bind-Value="stockModel.SupplierId" class="form-control">
                    <option value="0">-- Select Supplier --</option>
                    @foreach (var kvp in suppliers)
                    {
                        <option value="@kvp.Key">@kvp.Value</option>
                    }
                </InputSelect>
            </div>

            <div class="mb-3">
                <label>Amount:</label>
                <InputNumber class="form-control" @bind-Value="stockModel.Amount" />
            </div>

            <button class="btn btn-primary me-2" type="submit">
                @(editMode ? "Save Changes" : "Add Stock")
            </button>

            @if (editMode)
            {
                <button class="btn btn-secondary" type="button" @onclick="CancelEdit">Cancel</button>
            }
        </EditForm>
    </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Serial</th>
                <th>Buy Price</th>
                <th>Sell Price</th>
                <th>Supplier</th>
                <th>Amount</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var s in stocks)
            {
                <tr>
                    <td>@s.StockId</td>
                    <td>@s.Name</td>
                    <td>@s.SerialNumber</td>
                    <td>@s.BuyPrice</td>
                    <td>@s.SellPrice</td>
                    <td>@suppliers.GetValueOrDefault(s.SupplierId, "Unknown")</td>
                    <td>@s.Amount</td>
                    <td>
                        <button class="btn btn-sm btn-warning me-1" @onclick="() => EditStock(s)">Edit</button>
                        <button class="btn btn-sm btn-danger" @onclick="() => DeleteStock(s.StockId)">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<StockDto> stocks = new();
    private Dictionary<int, string> suppliers = new();
    private StockDto stockModel = new();
    private bool isLoading = true;
    private bool editMode = false;

    protected override async Task OnInitializedAsync()
    {
        isLoading = true;
        await GetSuppliers();
        await LoadStocks();
        isLoading = false;
    }

    private async Task GetSuppliers()
    {
        //TODO: Make an exception
        var suppliersList = await ApiClient.GetSuppliersAsync() ?? new();
        suppliers = suppliersList.ToDictionary(s => s.Id, s => s.Name);
    }

    private async Task LoadStocks()
    {
        //TODO: Make an exception
        stocks = await ApiClient.GetAllStocksAsync() ?? new();
    }

    private async Task HandleValidSubmit()
    {
        //TODO: Add a error
        //This had an error by defualt but setting value="0" breaks this, but if I remove the 0 it doesnt select the first option by default.
        if (stockModel.SupplierId == 0)
            return;

        if (editMode)
            await ApiClient.EditStockAsync(stockModel.StockId ?? 0, stockModel);
        else
            await ApiClient.AddStockAsync(stockModel);

        await LoadStocks();
        CancelEdit();
    }

    private void EditStock(StockDto s)
    {
        stockModel = new StockDto
        {
            StockId = s.StockId,
            Name = s.Name,
            SerialNumber = s.SerialNumber,
            BuyPrice = s.BuyPrice,
            SellPrice = s.SellPrice,
            SupplierId = s.SupplierId,
            Amount = s.Amount
        };
        editMode = true;
    }

    private void CancelEdit()
    {
        stockModel = new StockDto();
        editMode = false;
    }

    private async Task DeleteStock(int? id)
    {
        if (id == null)
            return;

        bool confirm = await JS.InvokeAsync<bool>("confirm", $"Delete stock #{id}?");
        if (confirm)
        {
            await ApiClient.RemoveStockAsync(id.Value);
            await LoadStocks();
        }
    }

    [Inject] IJSRuntime JS { get; set; } = default!;
}
